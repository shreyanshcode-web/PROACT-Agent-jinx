# -----------------------------------------------
# LLM Provider Selection
# -----------------------------------------------
# Set to 'gemini' or 'openai' to choose the LLM provider
JINX_LLM_PROVIDER=gemini

# -----------------------------------------------
# Google Gemini API Configuration
# -----------------------------------------------
# Required: Your Google Gemini API key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Optional: Gemini model to use (default: gemini-pro)
# Other options: gemini-1.5-pro (when available)
GEMINI_MODEL=gemini-pro

# -----------------------------------------------
# OpenAI API Configuration (kept for reference/fallback)
# -----------------------------------------------
# OpenAI API key (required if using OpenAI)
# OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Initial pulse value â€” higher allows more errors before stopping
PULSE=120

# Timeout (seconds) before the agent starts thinking automatically
TIMEOUT=1000

# Optional SOCKS5/HTTP proxy for API requests
# PROXY=socks5://127.0.0.1:12334

# Model override (optional). If not set, SDK default is used.
# Example: gpt-5
# OPENAI_MODEL=gpt-4.1

# Optional: Pre-existing Vector Store ID(s) for RAG queries
# Example single:  VECTOR_STORE_ID=vs_aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
# Example multiple: VECTOR_STORE_ID=vs_aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa,vs_bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb
# VECTOR_STORE_ID=YOUR_VECTOR_STORE_ID

# Optional: Force File Search tool to be called (instead of automatic)
# Set "true" to enable; leave blank or other to disable
# OPENAI_FORCE_FILE_SEARCH=false

# -----------------------------------------------
# Project Code Embeddings (emb/)
# -----------------------------------------------
EMBED_PROJECT_ENABLE=true
EMBED_PROJECT_ROOT=.

# -----------------------------------------------
# Chained Reasoning / Planning + Reflection
# -----------------------------------------------
JINX_CHAINED_REASONING=true
JINX_CHAINED_REFLECT=true
JINX_CHAINED_ADVISORY=true
JINX_CHAINED_MIN_LEN=0
JINX_CHAINED_REQUIRE_CODEY=false
JINX_CHAINED_PRE_EVID=true
JINX_CHAINED_PRE_DIALOG_K=2
JINX_CHAINED_PRE_CODE_K=2
JINX_CHAINED_PRE_DIALOG_MS=100
JINX_CHAINED_PRE_CODE_MS=180
JINX_CHAINED_DIALOG_CTX_MS=140
JINX_CHAINED_PROJECT_CTX_MS=500
JINX_CHAINED_EVID_DIALOG_K=3
JINX_CHAINED_EVID_CODE_K=3
JINX_CHAINED_EVID_DIALOG_MS=120
JINX_CHAINED_EVID_CODE_MS=220
JINX_CHAINED_MAX_STEPS=3
JINX_CHAINED_MAX_SUBS=2
JINX_CHAINED_MAX_RISKS=3
JINX_CHAINED_INCLUDE_CORTEX=true
JINX_CHAINED_INCLUDE_WARNINGS=true
JINX_CHAINED_INCLUDE_CITATIONS=true
JINX_CHAINED_INCLUDE_METRICS=false
JINX_CHAINED_DEV_ECHO=false
JINX_CHAINED_TRACE=false
JINX_CHAINED_FAIL_THRESHOLD=3
JINX_CHAINED_DISABLE_MS=60000
JINX_CHAINED_PERSIST_BRAIN=true
JINX_BRAIN_DIR=.jinx/brain
JINX_PERSIST_MEMORY=true
JINX_MEMORY_DIR=.jinx/memory

# -----------------------------------------------
# Continuity & State Frames
# -----------------------------------------------
JINX_CONTINUITY_ENABLE=true
JINX_CONTINUITY_SHORTLEN=80
JINX_STATEFRAME_ENABLE=true
EMBED_STATE_BOOST=1.1
EMBED_STATE_RECENCY_MULT=0.5
JINX_CONTINUITY_CACHE_TTL_MS=600000
JINX_TOPIC_SHIFT_CHECK=true
JINX_EVERGREEN_TOPIC_GUARD=true
JINX_STATEFRAME_MAXCHARS=800
JINX_STATEFRAME_COMPACT_N=6
JINX_STATEFRAME_RECENT_K=8
JINX_CHAINED_CLARIFY_AS_SUBS=true
JINX_QSEM_THRESHOLD=0.18

# -----------------------------------------------
# Prompt Macros / Dynamic Prompt Composition
# -----------------------------------------------
JINX_PROMPT_MACRO_MAX=50
JINX_PROMPT_MACRO_TRACE=false
JINX_MACRO_EMB_TOPK=3
JINX_MACRO_EMB_MS=180
JINX_MACRO_EMB_PREVIEW_CHARS=160

# -----------------------------------------------
# Prompts
# -----------------------------------------------
JINX_INCLUDE_SYSTEM_DESC=true
JINX_LOCALE=en

# -----------------------------------------------
# Planner Kernels / Shared Helper Code
# -----------------------------------------------
JINX_KERNEL_MAXCHARS=3000
JINX_KERNELS_PRELOAD=false

# -----------------------------------------------
# Auto Macros & Plugin Loader
# -----------------------------------------------
JINX_AUTOMACROS=true
JINX_AUTOMACRO_DIALOGUE=true
JINX_AUTOMACRO_PROJECT=true
JINX_AUTOMACRO_DIALOGUE_K=3
JINX_AUTOMACRO_PROJECT_K=3
JINX_AUTOMACRO_PATCH_EXPORTS=true
JINX_MACRO_PLUGINS=true
JINX_MACRO_PLUGIN_DIR=

# -----------------------------------------------
# Intelligent Patcher
# -----------------------------------------------
JINX_PATCH_AUTOCOMMIT=true
JINX_PATCH_AUTOCOMMIT_MAX_CHANGES=40
JINX_PATCH_MAX_SPAN=80
JINX_PATCH_CHECK_SYNTAX=true
JINX_PATCH_EXPORT_MAXCHARS=6000
JINX_PATCH_CONTEXT_TOL=0.72
JINX_PATCH_TRIM_TRAILING_WS=true
JINX_PATCH_AUTO_INDENT=true
JINX_PATCH_ANCHOR_REGEX=true
JINX_PATCH_ANCHOR_LAST=false
JINX_PATCH_PRESERVE_DOCSTRING=true

# -----------------------------------------------
# Verification
# -----------------------------------------------
JINX_VERIFY_AUTORUN=true
JINX_AUTOMACRO_VERIFY_EXPORTS=true
JINX_VERIFY_TOPK=6
JINX_VERIFY_MS=400
JINX_VERIFY_PASS=0.6
JINX_VERIFY_EXPORT_MAXCHARS=2000

# -----------------------------------------------
# Semantic Patch (Large Files)
# -----------------------------------------------
JINX_SEMANTIC_PATCH_ENABLE=true
JINX_SEMANTIC_PATCH_TOPK=5
JINX_SEMANTIC_PATCH_MARGIN=6
JINX_SEMANTIC_PATCH_TOL=0.55
JINX_SEMANTIC_PATCH_STRICT=false
JINX_SEMANTIC_PATCH_MS=400

# -----------------------------------------------
# File Size Watchdog
# -----------------------------------------------
JINX_FILESIZE_WARN=true
JINX_FILESIZE_MAXLINES=1200
JINX_FILESIZE_MAXBYTES=150000

# -----------------------------------------------
# Dumping (Source Extraction)
# -----------------------------------------------
JINX_DUMP_INCLUDE_DECORATORS=true
JINX_DUMP_INCLUDE_DOCSTRING=true
JINX_DUMP_FORCE=true

# -----------------------------------------------
# Refactor (Move / Split)
# -----------------------------------------------
JINX_REFACTOR_CREATE_INIT=true
JINX_REFACTOR_INSERT_SHIM=true
JINX_REFACTOR_FORCE=true
JINX_REFACTOR_REWRITE_IMPORTS=false
JINX_REFACTOR_REWRITE_GROUPED_IMPORTS=true

# -----------------------------------------------
# Validators
# -----------------------------------------------
JINX_VALIDATORS_ENABLE=true
JINX_IO_MAX_LOOP_BODY_LINES=400
JINX_IO_MAX_LITERAL_ELEMS=1000
JINX_RT_MAX_SLEEP_SECONDS=2.0
JINX_RT_MAX_RANGE_CONST=100000
JINX_HTTP_MAX_TIMEOUT=10.0
